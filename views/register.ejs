<div class="jumbotron jumbotron-fluid text-center bg-light">
	<br />
	<h1 class="text-primary">Welcome to smart<small class="text-muted" id="Welcome-page-muted">Attendance</small></h1>
	<br />
	<h3 class="text-primary"><em>Attendance management simplified with the power of AI</em></h3>
	<br />
</div>
<div class="top-padding"></div>
<div class="row mt-5">
	<div class="col-md-4 m-auto">
		<div class="card card-body">
			<h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Register</h1>
			<%- include ("./partials/messages"); %>
			<form action="/users/register" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="name" id="name" name="name" class="form-control mt-1" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
				</div>
				<div class="form-group mt-3">
					<label for="email">Email</label>
					<input type="email" id="email" name="email" class="form-control mt-1" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
				</div>
				<div class="form-group mt-3">
					<label for="password">Password</label>
					<input type="password" id="password" name="password" class="form-control mt-1" placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
				</div>
				<div class="form-group mt-3">
					<label for="password2">Confirm Password</label>
					<input type="password" id="password2" name="password2" class="form-control mt-1" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
				</div>
				<button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
			</form>
			<div style="overflow: hidden">
				<p class="lead mt-4" style="float: left">Have An Account? <a href="/users/login">Login</a></p>
				<p class="lead mt-4" style="float: right"><a href="/">Back to Homepage</a></p>
			</div>
		</div>
	</div>
</div>
