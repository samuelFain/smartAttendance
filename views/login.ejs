<div class="jumbotron jumbotron-fluid text-center bg-light">
	<br />
	<h1 class="text-primary">Welcome to smart<small class="text-muted" id="Welcome-page-muted">Attendance</small></h1>
	<br />
	<h3 class="text-primary"><em>Attendance management simplified with the power of AI</em></h3>
	<br />
</div>
<div class="top-padding"></div>
<div class="row mt-5">
	<div class="col-md-4 m-auto">
		<div class="card card-body">
			<h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
			<%- include ("./partials/messages"); %>
			<form action="/users/login" method="POST">
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" id="email" name="email" class="form-control mt-1" placeholder="Enter Email" />
				</div>
				<div class="form-group mt-3">
					<label for="password">Password</label>
					<input type="password" id="password" name="password" class="form-control mt-1" placeholder="Enter Password" />
				</div>
				<button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
			</form>
			<div style="overflow: hidden">
				<p class="lead mt-4" style="float: left">No Account? <a href="/users/register">Register</a></p>
				<p class="lead mt-4" style="float: right"><a href="/">Back to Homepage</a></p>
			</div>
		</div>
	</div>
</div>
